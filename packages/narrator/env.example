# Database Configuration for Docker Compose
NARRATOR_DB_NAME=narrator
NARRATOR_DB_USER=narrator
NARRATOR_DB_PASSWORD=narrator_dev
NARRATOR_DB_PORT=5432

# Database URL for your application
# Use this in your code or set as environment variable
NARRATOR_DATABASE_URL=postgresql+asyncpg://narrator:narrator_dev@localhost:5432/narrator

# Connection Pool Settings (optional)
NARRATOR_DB_POOL_SIZE=5
NARRATOR_DB_MAX_OVERFLOW=10
NARRATOR_DB_POOL_TIMEOUT=30
NARRATOR_DB_POOL_RECYCLE=300

# Enable SQL logging (for debugging)
# NARRATOR_DB_ECHO=true

# File Storage Configuration (optional)
# NARRATOR_FILE_STORAGE_PATH=/path/to/files
# NARRATOR_MAX_FILE_SIZE=52428800  # 50MB
# NARRATOR_MAX_STORAGE_SIZE=5368709120  # 5GB
